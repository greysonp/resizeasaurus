{
    "name": "Resizeasaurus",
    "version": "1.0",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "description": "Resizeasaurus wrecks, and Resizeasaurus respects. Try to stay on his good side.",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "content_scripts": [
        {
            "exclude_globs": [  ],
            "include_globs": [ "*" ],
            "css": ["css/style.css"],
            "js": [ 
                "js/libs/jquery-2.0.3.min.js",
                "js/easeljs-0.6.1.min.js",
                "js/content_script.js"],

            "matches": [  "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "tabs",
        "storage",
        "tts"
    ],

    "web_accessible_resources": [
        "img/lightning_bolt.png",
        "img/icon.png",
        "css/style.css",
        "css/bootstrap.min.css",
        "js/jquery-1.9.1.min.js",
        "js/libs/jquery.min.map",
        "js/bootstrap.min.js",
        "js/popup.js",
        "newtab.html",
        "css/fonts/OpenSans-Light.ttf",
        "css/fonts/OpenSans-Regular.ttf",
        "css/fonts/OpenSans-Italic.ttf",
        "css/fonts/OpenSans-Bold.ttf"
    ]
}
