monsterHeight = 100px
cornerWidth = 100px
clapsWidth = 100px

#monster-t, #monster-b
    position fixed
    width 100%
    height monsterHeight
    z-index 2000000000
    background-size 100% 100%
    background-repeat no-repeat

#monster-t
    top -1 * monsterHeight

#monster-b
    bottom -1 * monsterHeight
    
.squish-canvas
    width 100%
    position fixed


